{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs", // ← Changé de ESNext à commonjs
        "moduleResolution": "node", // ← Minuscule
        "outDir": "./dist",
        "rootDir": "./src",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": false,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true, // ← Ajouté
        "removeComments": true, // ← Ajouté
        "sourceMap": true // ← Ajouté (utile pour debug)
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}